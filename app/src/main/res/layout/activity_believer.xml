<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#2C33AC"
    android:orientation="vertical"
    tools:context=".Believer">

    <TextView
        android:id="@+id/tvlessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C33AC"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Believer - Imagine Dragons"
        android:textColor="#070707"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:autoPlay="false"
        app:showFullScreenButton="false"
        app:videoId="7wtfhZwyrcc" />

    <TextView
        android:id="@+id/tvteach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C33AC"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Learn the song"
        android:textColor="#070707"
        android:textSize="30dp" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:autoPlay="false"
        app:showFullScreenButton="false"
        app:videoId="nNkWuiILCaw"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnprevious"
            android:layout_width="69dp"
            android:layout_height="53dp"
            android:background="@drawable/previous" />
        <Button
            android:id="@+id/btnrate"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="start"
            android:background="@drawable/fivestars"
            />


    </LinearLayout>
    <Button
        android:layout_gravity="start"
        android:id="@+id/btnback"
        android:layout_width="69dp"
        android:layout_height="53dp"
        android:background="@drawable/backk"
        android:gravity="center" />

</LinearLayout>